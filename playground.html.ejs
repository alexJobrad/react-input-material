<html lang="en">
    <head>
        <meta charset="utf-8">
        <!--Prevent browser caching-->
        <meta http-equiv="cache-control" content="no-cache">
        <meta http-equiv="expires" content="0">
        <meta http-equiv="pragma" content="no-cache">
        <title>playground</title>
        <!--region polyfills-->
        <%_
            const features = [
                // MDC-Input - Label moving to top does not work.
                'Array.from',
                // clientnode - Usage.
                'Array.prototype.includes',
                // Usual array interaction.
                'Array.prototype.@@iterator',
                // MDC-Select - Throws about missing object.
                'CustomEvent',
                // Iterating over mapping objects everywhere.
                'Object.entries',
                // Applying a scope object during template function call.
                'Object.values',
                // React uses for rendering.
                'Promise',
                // Many usages e.g. in clientnode.
                'String.prototype.endsWith',
                'String.prototype.includes',
                'String.prototype.startsWith',
                // Used by react to identify its own entities.
                'Symbol',
                'Symbol.for'
            ]
        _%>
        <script src="https://polyfill.io/v3/polyfill.js?features=<%- encodeURIComponent(features.join(',')) %>"></script>
        <!--endregion-->
    </head>
    <style>
        .generic-input {
            margin-bottom: 20px;
        }

        .playground__generic-animate .generic-animate-appear-active,
        .playground__generic-animate .generic-animate-enter-active,
        .playground__generic-animate .generic-animate-exit-active {
            transition: opacity 2000ms ease-in !important;
        }

        .playground__inputs {
            float: left;
            width: 500px;
        }

        .playground__outputs {
            height: -webkit-fill-available;
            margin-left: 500px;
            overflow: auto;
            position: fixed;
        }

        <%-
            require('material-icons/iconfont/material-icons.css')
                .replace(
                    /(url\()"?(MaterialIcons-Regular\.[^.")]+)"?(\))/g,
                    '$1material-icons/iconfont/$2$3'
                )
        %>
    </style>
    <body class="no-javascript playground">
        <application></application>
    </body>
<html>
